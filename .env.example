# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pulseworks_dev?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# NextAuth (used for both web session and API JWT)
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# S3-Compatible Storage (AWS S3 or Cloudflare R2)
S3_ENDPOINT="https://your-account.r2.cloudflarestorage.com"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"
S3_BUCKET="pulseworks-media"
S3_REGION="auto"
S3_PUBLIC_BASE_URL="https://your-public-r2-url.com"
S3_FORCE_PATH_STYLE="true"

# Posting Provider (Ayrshare)
POSTING_PROVIDER="ayrshare"
AYRSHARE_API_KEY="your-ayrshare-api-key"

# AI Provider
AI_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key"
# OR for Gemini:
# AI_PROVIDER="gemini"
# GEMINI_API_KEY="your-gemini-api-key"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# PostLoop Subscription Plans (with 14-day trial)
STRIPE_PRICE_STARTER="price_starter_..."
STRIPE_PRICE_GROWTH="price_growth_..."
STRIPE_PRICE_PRO="price_pro_..."

# Add-ons
STRIPE_PRICE_STARTER_AUTOPOST="price_starter_autopost_..."

# One-time Purchases
STRIPE_PRICE_STATIC_ONETIME="price_static_..."
STRIPE_PRICE_VIDEO_ONETIME="price_video_..."

# Application
APP_URL="http://localhost:3000"
NODE_ENV="development"
